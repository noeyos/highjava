package kr.or.ddit.basic;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.sql.ClientInfoStatus;

/*

	'e:/e_other' 폴더에 있는 '펭귄.jpg'파일을
	'e:/e_other/연습용' 폴더에 '펭귄_복사본.jpg'파일로 복사하는 프로그램


*/

public class FileCopy {

	public static void main(String[] args) {
		FileInputStream fis;
		BufferedInputStream bis;
		FileOutputStream fos;
		BufferedOutputStream bos;
		try {
			fis = new FileInputStream("e:/e_other/펭귄.jpg");
			bis = new BufferedInputStream(fis);
			fos = new FileOutputStream("e:/e_other/펭귄_복사본.jpg");
			bos = new BufferedOutputStream(fos);
		} catch (FileNotFoundException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}

		
		int data;	// 읽어온 데이터가 저장될 변수
		
		// read()메서드 ==> 더 이상 읽어올 데이터가 없으면 -1을 반환한다.
		while((data=fis.read()) != -1) {
			// 읽어온 데이터를 처리하는 곳
			
			bos.write(data); 	// 출력하기
			
		}
		
		try {
			fis.close();
			bis.close();
			fos.close();
			bos.close();
		} catch (Exception e) {
			// TODO: handle exception
		}

	}

}
