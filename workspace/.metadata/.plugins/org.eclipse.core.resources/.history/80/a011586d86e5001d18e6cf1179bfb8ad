class ThreadStopTest1 extends Thread {
	private boolean stop;
	
	public void setStop(boolean stop) {
		this.stop = stop;
	}
	
	@Override
	public void run() {
		while(!stop) {
			System.out.println("스레드 실행 중.");
		}
		
		System.out.println("자원 정리.");
		System.out.println("스레드 종료.");
	}
}
